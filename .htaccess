# PHP configuration
php_flag display_errors Off
php_flag log_errors On

# Security headers
<IfModule mod_headers.c>
    Header set X-Content-Type-Options "nosniff"
    Header set X-Frame-Options "SAMEORIGIN"
</IfModule>

# Prevent directory listing
Options -Indexes

# Protect database folder
<FilesMatch "\.(db|sqlite|sqlite3)$">
    Order allow,deny
    Deny from all
</FilesMatch>

# Protect config, scripts, database and cron folders
<DirectoryMatch "^(config|scripts|database|cron)">
    Order allow,deny
    Deny from all
</DirectoryMatch>

